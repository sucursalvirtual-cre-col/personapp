const options = { 
    weekday: 'long', 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric', 
    hour: 'numeric', 
    minute: 'numeric', 
    hour12: true 
};

const currentDate = new Date().toLocaleDateString('es-ES', options);

document.getElementById('currentDate').innerHTML = currentDate;